{
    "bsonType": "object",
    "title": "Photo Media Object schema",
    "required": [
        "photo",
        "username",
        "mediaId",
        "capsules",
        "title",
        "settings",
        "metadata"
    ],
    "properties": {
        "photo": {
            "bsonType": "string",
            "description": "base64 encoding of the music to be uploaded"
        },
        "frame": {
            "bsonType": "string",
            "description": "base64 encoding of the photo frame"
        },
        "username": {
            "bsonType": "string",
            "description": "must be a string and is required"
        },
        "mediaId": {
            "bsonType": "string",
            "description": "unique key for media object"
        },
        "capsules": {
            "bsonType": "array",
            "description": "array of time capsule ids",
            "items": [{
                "type": "string"
            }]
        },
        "title": {
            "bsonType": "string",
            "description": "name of photo file"
        },
        "caption": {
            "bsonType": "string",
            "description": "caption of the photo"
        },
        "settings": {
            "bsonType": "object",
            "description": "settings for photo itself"
        },
        "metadata": {
            "bsonType": "object",
            "description": "object containing all media metadata"
        }
    }
}