{
    "bsonType": "object",
    "title": "Time Capsule Schema",
    "required": [
        "ownerId",
        "title",
        "contributors",
        "photoArr",
        "textArr",
        "musicArr",
        "settings",
        "metadata"
    ],
    "properties": {
       "ownerId": {
            "bsonType": "string",
            "description": "Owner id (uuid) of the time capsule"
        },
        "title": {
            "bsonType": "string",
            "description": "The title of the time capsule"
        },
       "contributors": {
            "bsonType": "array",
            "items": {
                "type": "string"
            },
            "description": "Array of user ids who have contributed to the"
        },
       "photoArr": {
            "bsonType": "array",
            "items": {
                "type": "object"
            },
            "description": "Array of photo objects within the time capsule"
        },
       "textArr": {
            "bsonType": "array",
            "items": {
                "type": "object"
            },
            "description": "Array of text objects within the time capsule"
        },
       "musicArr": {
            "bsonType": "array",
            "items": {
                "type": "object"
            },
            "description": "Array of music objects within the time capsule"
        },
        "settings": {
            "bsonType": "object",
            "description": "Settings associated with a time capsule",
            "properties": {
                "group": {
                    "bsonType": "string",
                    "description": "The group this capsule belongs to"
                },
                "privacy": {
                    "bsonType": "string",
                    "enum": ["public", "private"],
                    "description": "Privacy settings"
                },
                "theme": {
                    "bsonType": "object",
                    "description": "The theme of the time capsule"
                }
            }
        },
        "metadata": {
            "bsonType": "object",
            "description": "All metadata associated with a time capsule"
        },
        "description": {
            "bsonType": "string",
            "description": "Description of what the time capsule is for"
        },
        "tags": {
            "bsonType": "array",
            "description": "Array of tags to be used",
            "items": {
                "type": "string"
            }
        }
    }
}