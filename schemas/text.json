{
    "bsonType": "object",
    "title": "Text Object schema",
    "required": [
        "username",
        "media_id",
        "capsules",
        "text",
        "settings",
        "metadata"
    ],
    "properties": {
        "username": {
            "bsonType": "string",
            "description": "Must be a string and is required"
        },
        "media_id": {
            "bsonType": "string",
            "description": "Unique key for media object"
        },
        "capsules": {
            "bsonType": "array",
            "description": "Array of time capsule ids",
            "items": [{
                "type": "string"
            }]
        },
        "text": {
            "bsonType": "string",
            "description": "Content of text object"
        },
        "settings": {
            "bsonType": "object",
            "description": "Settings for text itself",
            "properties": {
                "font": {
                    "bsonType": "string",
                    "description": "Name of font"
                }
            }
        },
        "metadata": {
            "bsonType": "object",
            "description": "Object containing all media metadata"
        }
    }
}