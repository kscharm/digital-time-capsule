{
    "bsonType": "object",
    "title": "Music Media Object Schema",
    "required": [
        "musicFiles",
        "username",
        "mediaId",
        "capsules",
        "title",
        "settings",
        "metadata"
    ],
    "properties": {
        "musicFiles": {
            "bsonType": "array",
            "description": "array of music files to upload"
        },
        "username": {
            "bsonType": "string",
            "description": "must be a string and is required"
        },
        "mediaId": {
            "bsonType": "string",
            "description": "unique key for media object"
        },
        "capsules": {
            "bsonType": "array",
            "description": "array of time capsule ids",
            "items": [{
                "type": "string"
            }]
        },
        "title": {
            "bsonType": "string",
            "description": "name of song"
        },
        "caption": {
            "bsonType": "string",
            "description": "caption of the song"
        },
        "settings": {
            "bsonType": "object",
            "description": "settings for song itself"
        },
        "metadata": {
            "bsonType": "object",
            "description": "object containing all media metadata"
        }
    }
}