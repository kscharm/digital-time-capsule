{
    "bsonType": "object",
    "title": "Music Media Object Schema",
    "required": [
        "music",
        "username",
        "mediaId",
        "capsules",
        "settings",
        "metadata"
    ],
    "properties": {
        "music": {
            "bsonType": "string",
            "description": "base64 encoding of the music to be uploaded"
        },
        "username": {
            "bsonType": "string",
            "description": "must be a string and is required"
        },
        "mediaId": {
            "bsonType": "string",
            "description": "unique key for media object"
        },
        "capsules": {
            "bsonType": "array",
            "description": "array of time capsule ids",
            "items": [{
                "type": "string"
            }]
        },
        "title": {
            "bsonType": "string",
            "description": "name of song"
        },
        "caption": {
            "bsonType": "string",
            "description": "caption of the song"
        },
        "settings": {
            "bsonType": "object",
            "description": "settings for song itself"
        },
        "playlist": {
            "bsonType": "string",
            "description": "the playlist this song belongs to"
        },
        "metadata": {
            "bsonType": "object",
            "description": "object containing all media metadata"
        }
    }
}