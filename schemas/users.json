{
    "bsonType": "object",
    "required": [
        "user_id",
        "username",
        "password",
        "university",
        "major",
        "name",
        "email",
        "friends",
        "photoArr",
        "textArr",
        "musicArr",
        "capsules",
        "metadata"
    ],
    "properties": {
        "user_id": {
            "bsonType": "string",
            "description": "User id (a uuid)"
        },
        "username": {
            "bsonType": "string",
            "description": "The username for identification purposes"
        },
        "password": {
            "bsonType": "string",
            "description": "The encrypted password associated with the user"
        },
        "university": {
            "bsonType": "string",
            "description": "The university associated with the user"
        },
        "major": {
            "bsonType": "string",
            "description": "The major associated with the user"
        },
        "name": {
            "bsonType": "string",
            "description": "Name of the user"
        },
        "email": {
            "bsonType": "string",
            "description": "User's email"
        },
        "friends": {
            "bsonType": "array",
            "description": "Array of friend ids",
            "items": {
              "type":"string"
            } 
        },
        "photoArr": {
          "bsonType": "array",
          "description": "Array of photo objects user uploaded",
          "items": {
            "type":"object"
          }
        },
       "textArr": {
          "bsonType": "array",
          "description": "Array of text objects user uploaded",
          "items": {
            "type":"object"
           }
        },
       "musicArr": {
          "bsonType": "array",
          "description": "Array of music objects user uploaded",
          "items": {
            "type":"object"
          }
        },
        "capsules": {
            "bsonType": "array",
            "description": "Array of time capsule ids user created",
            "items": {
              "type":"string"
            } 
        },
         "settings": {
            "bsonType": "object",
            "description": "Settings associated with the user"
        },
        "metadata": {
            "bsonType": "object",
            "description": "All metadata associated with a user"
        }
    }
}